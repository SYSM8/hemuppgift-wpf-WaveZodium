<Window x:Class="Hemuppgift_WPFtemplate.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Name="btnStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Button x:Name="btnTop" Content="Top" DockPanel.Dock="Top"/>
        <Button x:Name="btnBottom" Content="Bottom" DockPanel.Dock="Bottom"/>
        <Button x:Name="btnLeft" Content="Left" DockPanel.Dock="Left"/>
        <Button x:Name="btnRight" Content="Right" DockPanel.Dock="Right"/>
        <Button x:Name="btnCenter" Content="Center"
                VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </DockPanel>
</Window>
